<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>

    <definition name="baseLayout" template="/jsp/template/baseLayout.jsp">
        <put-attribute name="title" />
        <!--<put-attribute name="title"  value="Template" type="string"/>-->
        <put-attribute name="banner" value="/jsp/template/banner.jsp" />
        <put-attribute name="menu"   value="/jsp/template/menu.jsp"/>
        <put-attribute name="body" />
        <put-attribute name="footer"   value="/jsp/template/footer.jsp"/>
    </definition>

    <definition name="login" extends="baseLayout">
        <put-attribute name="title"  value="Login"/>
        <put-attribute name="body"   value="/jsp/pages/login.jsp"/>
    </definition>

    <definition name="register" extends="baseLayout">
        <put-attribute name="title"  value="Register"/>
        <put-attribute name="body"   value="/jsp/pages/register.jsp"/>
    </definition>


</tiles-definitions>